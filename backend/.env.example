# SRA Backend Configuration
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:yourpassword@localhost:5432/sra

# Admin API Key (for server-to-server / admin operations - generate a strong key)
ADMIN_API_KEY=sra_admin_your_secure_key_here

# IBM watsonx Configuration
WATSONX_API_KEY=your-watsonx-api-key
WATSONX_PROJECT_ID=your-project-id
WATSONX_AGENT_URL=https://your-watsonx-agent-endpoint

# Slack App Integration (for multi-workspace OAuth)
# Create a Slack app at https://api.slack.com/apps
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_REDIRECT_URI=https://yourapp.com/slack/oauth/callback
SLACK_SCOPES=chat:write,commands,app_mentions:read,channels:history,im:history

# Slack Webhook (simpler integration, optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_CHANNEL=#incidents

# Other Notification Integrations (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
JIRA_URL=https://your-org.atlassian.net
JIRA_USER=your-email@example.com
JIRA_TOKEN=your-jira-api-token
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USER=your-user
SERVICENOW_PASSWORD=your-password

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
